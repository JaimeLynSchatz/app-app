<div class='row'>
  <div class='col-lg-12'>
    <legend>Profile</legend>
    <%= form_for @person, url: admin_person_path, method: :patch do |f| -%>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      </div>

      <div class="form-group">
        <%= f.label :email, "Email Address" %>
        <%= f.email_field :email, class: "form-control", placeholder: "Email Address" %>
      </div>
      
      <div class='form-group'>
        <label for="person_locked" class='checkbox'>
          <%= f.check_box :locked %> Lock User
        </label>
      </div>
      
      <div class='form-group'>
        <%= f.label :role, "Role" %>
        <%= f.select :role, [["Reviewer", "reviewer"],["Admin", "admin"]], {}, class: "form-control" %>
      </div>
      
      <%= f.submit "Update", class: 'btn btn-success' %>
    <% end -%>    
  </div>
</div>
