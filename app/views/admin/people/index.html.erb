<div class='row'>
  <div class='col-lg-12'>
    <table class='table table-striped table-bordered'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Role</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr class="<%= 'danger' if person.locked? %>">
            <td><%= person.name %></td>
            <td><%= person.role.capitalize %></td>
            <td>
				      <%= link_to "Edit", edit_admin_person_path(person) %>
			      </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>