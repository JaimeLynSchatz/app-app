<div class='row'>
  <div class='col-lg-12'>
    <legend>All Submission</legend>
    <table class='table table-striped table-bordered'>
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Reviews</th>
        <th></th>
      </tr>
      
      <% @submissions.each do |submission| %>
        <tr>
          <td><%= submission.person.name %></td>
          <td><%= submission.status.capitalize %></td>
          <td><%= submission.reviews.count %></td>
          <td>
            <% if submission.status == "submitted" %>
              <% if current_user.reviewed?(submission.person) %>
                <%= link_to "Selected", admin_edit_review_path(submission.person.id), class: "btn btn-primary disabled" %>
              <% else %>
                <%= link_to "Start Review", admin_assign_review_path(submission.person.id), class: "btn btn-primary" %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>