<div class='row'>
  <div class='col-lg-12'>
    <legend>Profile</legend>
    <%= form_for current_user, method: :patch do |f| -%>
      <div class="form-group">
        <%= f.label :email, "Email" %>
        <%= f.email_field :email %>
      </div>
      <div class='form-group'>
        <%= f.label :name, "Full Name" %>
        <%= f.text_field :name %>
      </div>
      <div class='form-group'>

        <%= f.label :phone, "Phone Number" %>
        <%= f.phone_field :phone %>
      </div>
      <%= f.submit "Update", class: 'btn btn-success' %>
    <% end -%>    
  </div>
</div>
