<div class='row'>
  <div class='col-lg-6 col-lg-offset-3'>
    <div class='well'>
      <legend>Sign In</legend>
      <%= form_tag create_sign_in_path, method: :post, role: "form" do -%>
        <div class="form-group">
          <%= label_tag :email, "Email Address" %>
          <%= email_field_tag :email, params[:email], class: "form-control", placeholder: "Email Address" %>
        </div>
        <div class="form-group">
          <%= label_tag :password %>
          <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
        </div>
        <%= submit_tag "Sign In", class: "btn btn-default" %>
      <% end -%>
    </div>
    <p>
      Don't have an account? <%= link_to "Sign Up", sign_up_path %>.
    </p>
  </div>
</div>